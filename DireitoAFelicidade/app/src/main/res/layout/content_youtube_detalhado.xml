<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".YoutubeDetalhadoActivity"
    tools:showIn="@layout/activity_youtube_detalhado">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp">

                <ImageView
                    android:id="@+id/ivDetalhadoCapaCanal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_launcher" />


                <TextView
                    android:id="@+id/tvDetalhadoNomeCanal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do canal"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="27dp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"></TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descrição: "
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tvDetalhadoDescricaoCanal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_marginBottom="20dp"
            android:text="Descrição"
            android:textSize="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indicado para: "
                    android:textColor="#000000"
                    android:justificationMode="inter_word"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tvDetalhadoIndicacaoCanal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Indicação"
            android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temática(s): "
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tvDetalhadoTematicaCanal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Tematica do Canal"
            android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Link: "
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tvDetalhadoLinkCanal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link do Canal"
            android:textSize="20dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</LinearLayout>