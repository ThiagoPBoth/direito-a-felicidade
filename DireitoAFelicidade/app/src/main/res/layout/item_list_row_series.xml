<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvSites"
        android:scrollbars="vertical"
        app:cardUseCompatPadding="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="180dp"
                android:contentDescription="@null"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:id="@+id/ivCapaSerie"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/ivCapaSerie"
                app:layout_constraintStart_toEndOf="@+id/ivCapaSerie"
                android:layout_marginLeft="130dp"

                android:text="Títlo"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/tvNomeSerie"
                />

            <TextView
                android:id="@+id/tvSinopseSerie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="130dp"
                app:layout_constraintTop_toBottomOf="@+id/tvNomeSerie"
                app:layout_constraintStart_toEndOf="@+id/ivCapaSerie"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:maxLines="4"

                android:justificationMode="inter_word"
                />

            <TextView
                android:id="@+id/textoSerieTematica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temática(s):"
                android:layout_marginLeft="130dp"
                app:layout_constraintTop_toBottomOf="@+id/tvSinopseSerie"
                app:layout_constraintStart_toEndOf="@+id/ivCapaSerie"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/tvTematicaSerie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ansiedade, medo.:"
                android:layout_marginLeft="130dp"
                app:layout_constraintTop_toBottomOf="@+id/textoSerieTematica"
                app:layout_constraintStart_toEndOf="@+id/ivCapaSerie"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp"
                android:maxLines="4"

                />








        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
