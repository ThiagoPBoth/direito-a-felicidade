<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvYoutube"
        android:scrollbars="vertical"
        app:cardUseCompatPadding="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:id="@+id/ivCapaCanal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ivCapaCanal"
                app:layout_constraintStart_toEndOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp"
                android:text="Títlo"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/tvNomeCanal"
                />

            <TextView
                android:id="@+id/tvDescricaoCanal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="descricao"

                app:layout_constraintTop_toBottomOf="@+id/tvNomeCanal"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"

                android:justificationMode="inter_word"
                />

            <TextView
                android:id="@+id/textoTematicaCanal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gênero(s):"

                app:layout_constraintTop_toBottomOf="@+id/tvDescricaoCanal"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/tvTematicaCanal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ansiedade"

                app:layout_constraintTop_toBottomOf="@+id/textoTematicaCanal"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp"
                android:maxLines="4"

                />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>